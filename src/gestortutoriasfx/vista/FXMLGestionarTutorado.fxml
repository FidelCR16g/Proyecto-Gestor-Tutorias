<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="600.0" prefWidth="900.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestortutoriasfx.controlador.FXMLGestionarTutoradoController">

    <VBox prefHeight="60.0" prefWidth="900.0" style="-fx-background-color: #0267A2;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Gestionar Tutorados" textFill="WHITE">
            <VBox.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </VBox.margin>
        </Label>
    </VBox>

    <VBox prefHeight="516.0" prefWidth="900.0" spacing="10" style="-fx-background-color: #F5F7FA;" AnchorPane.bottomAnchor="24.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="60.0">
        <padding>
            <Insets bottom="16" left="16" right="16" top="16" />
        </padding>

        <HBox spacing="10">
            <TextField fx:id="tfBuscar" prefWidth="420" promptText="Buscar por matrícula / nombre..." />
            <Button onAction="#clicBuscar" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Buscar" />
        </HBox>

        <TableView fx:id="tvTutorados" prefHeight="420">
            <columns>
                <TableColumn fx:id="tcMatricula" prefWidth="130" text="Matrícula" />
                <TableColumn fx:id="tcNombre" prefWidth="280" text="Nombre" />
                <TableColumn fx:id="tcPrograma" prefWidth="240" text="Programa" />
                <TableColumn fx:id="tcEstado" prefWidth="120" text="Estado" />
            </columns>
        </TableView>

        <Label fx:id="lbMensaje" style="-fx-text-fill: #C62828; -fx-font-size: 12px;" text="" />
    </VBox>

    <HBox prefHeight="44.0" prefWidth="900.0" spacing="10"
        style="-fx-background-color: #FFFFFF; -fx-alignment: CENTER_RIGHT;"
        AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
      <padding>
          <Insets bottom="10" left="10" right="10" top="10" />
      </padding>

      <Button onAction="#clicAgregar"
              style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
              text="Agregar" />
      <Button onAction="#clicEditar"
              style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
              text="Editar" />
      <Button onAction="#clicEliminar"
              style="-fx-background-color: #C62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;"
              text="Eliminar" />
    </HBox>
    
</AnchorPane>
