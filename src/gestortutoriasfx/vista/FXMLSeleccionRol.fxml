<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="350.0" prefWidth="622.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestortutoriasfx.controlador.FXMLSeleccionRolController">

    <VBox prefHeight="60.0" style="-fx-background-color: #0267A2;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Seleccionar Perfil" textFill="WHITE">
            <VBox.margin>
                <Insets bottom="10" left="10" right="10" top="10" />
            </VBox.margin>
        </Label>
    </VBox>

    <VBox layoutY="84.0" prefHeight="236.0" prefWidth="622.0" spacing="12" style="-fx-background-color: #F5F7FA;" AnchorPane.bottomAnchor="43.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="84.0">
        <padding>
            <Insets bottom="18" left="18" right="18" top="18" />
        </padding>

        <VBox prefHeight="199.0" prefWidth="599.0" spacing="10" style="-fx-background-color: white; -fx-border-color: #CFD8DC; -fx-border-radius: 10; -fx-background-radius: 10;">
            <padding>
                <Insets bottom="16" left="16" right="16" top="16" />
            </padding>

            <Label fx:id="labelBienvenida" style="-fx-font-size: 14px; -fx-font-weight: bold; -fx-text-fill: #263238;" text="Bienvenido(a) ..." />

            <Label style="-fx-font-size: 13px; -fx-text-fill: #455A64;" text="Se han detectado múltiples roles para su usuario.\nPor favor, elija con cuál desea ingresar:" wrapText="true" />


            <HBox spacing="12" style="-fx-alignment: CENTER_LEFT;">
                <Button fx:id="btnTutor" mnemonicParsing="false" onAction="#btnIngresarTutor" prefHeight="25.0" prefWidth="282.0" style="-fx-background-color: #2E7D32; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Ingresar como Tutor" />


                <Button fx:id="btnRolSuperior" mnemonicParsing="false" onAction="#btnIngresarRolSuperior" prefHeight="80.0" prefWidth="388.0" style="-fx-background-color: #1565C0; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Ingresar como " />
            </HBox>

            <!-- Mensaje opcional (si tu controller lo usa después) -->
            <Label fx:id="lbMensaje" style="-fx-text-fill: #C62828; -fx-font-size: 12px;" text="" />
      
          <!-- Footer -->
          <HBox prefHeight="0.0" prefWidth="544.0" spacing="10" style="-fx-background-color: #FFFFFF; -fx-alignment: CENTER_RIGHT;">
              <padding>
                  <Insets bottom="10" left="10" right="10" top="10" />
              </padding>
      
              <Button mnemonicParsing="false" onAction="#btnCerrarSesion" style="-fx-background-color: #C62828; -fx-text-fill: white; -fx-font-weight: bold; -fx-cursor: hand;" text="Cerrar sesión" />
          </HBox>
        </VBox>
    </VBox>

</AnchorPane>
