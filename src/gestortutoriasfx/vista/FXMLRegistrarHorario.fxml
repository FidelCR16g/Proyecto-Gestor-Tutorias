<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane id="AnchorPane" prefHeight="580.0" prefWidth="650.0" style="-fx-background-color: #ffffff;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestortutoriasfx.controlador.FXMLRegistrarHorarioController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="650.0" style="-fx-background-color: #0267A2;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Generación Automática de Horarios" textFill="WHITE">
               <font><Font name="System Bold" size="20.0" /></font>
               <VBox.margin><Insets left="25.0" /></VBox.margin>
            </Label>
            <Label text="Configure la hora y ubicación para asignar bloques de 20 min." textFill="#b3e5fc">
               <font><Font size="12.0" /></font>
               <VBox.margin><Insets left="25.0" /></VBox.margin>
            </Label>
         </children>
      </VBox>

      <GridPane hgap="20.0" layoutX="50.0" layoutY="90.0" vgap="20.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" AnchorPane.topAnchor="90.0">
        <columnConstraints>
          <ColumnConstraints hgrow="SOMETIMES" maxWidth="180.0" minWidth="10.0" prefWidth="160.0" />
          <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="300.0" />
        </columnConstraints>
        <rowConstraints>
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" />
          <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" /> <RowConstraints minHeight="10.0" prefHeight="35.0" vgrow="SOMETIMES" /> </rowConstraints>
         <children>
            <Label text="Periodo Escolar:">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            <Label fx:id="lbPeriodoActual" textFill="#546e7a" GridPane.columnIndex="1">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            
            <Label text="Número de Sesión:" GridPane.rowIndex="1">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            <ComboBox fx:id="cbNumeroSesion" prefHeight="35.0" prefWidth="290.0" promptText="Seleccione la sesión" style="-fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="1" />
            
            <Label text="Hora de Inicio:" GridPane.rowIndex="2">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            <HBox alignment="CENTER_LEFT" spacing="10.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
               <children>
                  <ComboBox fx:id="cbHora" prefHeight="35.0" prefWidth="140.0" promptText="Hora" style="-fx-font-size: 13px;" />
                  <ComboBox fx:id="cbMinutos" prefHeight="35.0" prefWidth="140.0" promptText="Minutos" style="-fx-font-size: 13px;" />
               </children>
            </HBox>

            <Label text="Salón:" GridPane.rowIndex="3">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>

            <Label text="Modalidad:" GridPane.rowIndex="4">
               <font><Font name="System Bold" size="14.0" /></font>
            </Label>
            <ComboBox fx:id="cbModalidad" prefHeight="35.0" prefWidth="290.0" promptText="Seleccione una modalidad" style="-fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="4" />
            <ComboBox fx:id="cbSalon" prefHeight="31.0" prefWidth="290.0" promptText="Seleccione un salón" style="-fx-font-size: 13px;" GridPane.columnIndex="1" GridPane.rowIndex="3" />
         </children>
      </GridPane>

      <Separator layoutX="50.0" layoutY="372.0" prefHeight="21.0" prefWidth="550.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0" />

      <VBox layoutX="50.0" layoutY="393.0" spacing="5.0" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
         <children>
            <Label text="Criterios de Asignación:" textFill="#0277bd">
               <font><Font name="System Bold" size="13.0" /></font>
            </Label>
            <Label text="• 1. La fecha se asignará automáticamente según la planeación oficial." textFill="#455a64">
               <font><Font size="13.0" /></font>
            </Label>
            <Label text="• 2. Ordenado por Semestre (Ascendente) → Apellido Paterno." textFill="#455a64">
               <font><Font size="13.0" /></font>
            </Label>
            <Label text="• 3. Intervalos de 20 minutos por sesion" textFill="#455a64">
               <font>
                  <Font size="13.0" />
               </font>
            </Label>
         </children>
      </VBox>

            <Label fx:id="lbError" layoutX="50.0" layoutY="484.0" textFill="#d32f2f" AnchorPane.leftAnchor="50.0" AnchorPane.rightAnchor="50.0">
         <font>
            <Font name="System Bold" size="12.0" />
         </font>
      </Label>

            <HBox alignment="CENTER" layoutX="0.0" layoutY="530.0" spacing="30.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="btnGenerar" mnemonicParsing="false" onAction="#clicGenerarHorarios" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 3, 0, 0, 1);" text="Generar Horarios">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
            </Button>
            <Button fx:id="btnCancelar" mnemonicParsing="false" onAction="#clicCancelar" prefHeight="40.0" prefWidth="130.0" style="-fx-background-color: #cfd8dc; -fx-cursor: hand;" text="Cancelar">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</AnchorPane>
