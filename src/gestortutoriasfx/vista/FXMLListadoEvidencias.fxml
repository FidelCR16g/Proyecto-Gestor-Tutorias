            <VBox fx:id="vbListaSesiones" spacing="12.0" style="-fx-background-color: #f5f5f5;">
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </VBox>
         </content>
      </ScrollPane>

      <HBox alignment="CENTER" layoutX="30.0" layoutY="470.0" spacing="20.0" AnchorPane.bottomAnchor="30.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
         <children>
            <Button fx:id="btnSubir" disable="true" mnemonicParsing="false" onAction="#clicSubirEvidencia" prefHeight="40.0" prefWidth="160.0" style="-fx-background-color: #4caf50; -fx-text-fill: white; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.3), 3, 0, 0, 1);" text="Subir Evidencia">
