<AnchorPane id="AnchorPane" prefHeight="550.0" prefWidth="750.0" style="-fx-background-color: #f5f5f5;" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestortutoriasfx.controlador.FXMLListadoEvidenciasController">
   <children>
      <VBox alignment="CENTER_LEFT" prefHeight="70.0" prefWidth="750.0" style="-fx-background-color: #0267A2;" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Label text="Gestionar Evidencia de Tutorías" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </Label>
            <Label text="Seleccione una sesión de la lista para administrar sus archivos." textFill="#e0f2f1">
               <font>
                  <Font size="13.0" />
               </font>
               <VBox.margin>
                  <Insets left="25.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>

      <Label layoutX="30.0" layoutY="90.0" text="Sesiones disponibles en el periodo actual:" textFill="#546e7a" AnchorPane.leftAnchor="30.0" AnchorPane.topAnchor="90.0">
         <font>
            <Font name="System Bold" size="14.0" />
         </font>
      </Label>

      <ScrollPane fitToWidth="true" hbarPolicy="NEVER" layoutX="30.0" layoutY="120.0" prefHeight="330.0" prefWidth="690.0" style="-fx-background-color: transparent; -fx-background: #f5f5f5; -fx-border-color: #cfd8dc; -fx-border-radius: 4;" AnchorPane.bottomAnchor="100.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="120.0">
