<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane fx:id="borderPanePrincipal" prefHeight="785.0" prefWidth="1216.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="gestortutoriasfx.controlador.FXMLPrincipalAdministradorController">
   
   <top>
      <HBox alignment="CENTER_LEFT" prefHeight="60.0" spacing="15.0" style="-fx-background-color: #0277bd; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 5, 0, 0, 2);" BorderPane.alignment="CENTER">
         <children>
            <Label prefHeight="30.0" prefWidth="420.0" text="SGT - Gestión de Tutoría (Administrador)" textFill="WHITE">
               <font>
                  <Font name="System Bold" size="20.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            
            <Pane HBox.hgrow="ALWAYS" />
            
         </children>
         <padding>
            <Insets bottom="10.0" top="10.0" />
         </padding>
      </HBox>
   </top>

   <left>
      <VBox prefHeight="590.0" prefWidth="233.0" spacing="10.0" style="-fx-background-color: #E0E0E0;" BorderPane.alignment="CENTER">
         <children>
            <Label text="GESTION" textFill="#5865c7">
               <font>
                  <Font name="System Bold" size="12.0" />
               </font>
               <VBox.margin>
                  <Insets left="15.0" top="20.0" />
               </VBox.margin>
            </Label>
            
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clicGestionarTutorado" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-cursor: hand; -fx-padding: 0 0 0 20;" text="Gestionar Tutorados (Alumnos)" textFill="#252525">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clicGestionarUsuarios" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-cursor: hand; -fx-padding: 0 0 0 20;" text="Gestionar Usuarios" textFill="#252525">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>
            <Button alignment="BASELINE_LEFT" graphicTextGap="15.0" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#clicGestionarCalendario" prefHeight="45.0" style="-fx-background-color: transparent; -fx-text-fill: black; -fx-cursor: hand; -fx-padding: 0 0 0 20;" text="Gestionar Calendario" textFill="#252525">
               <font>
                  <Font size="14.0" />
               </font>
            </Button>

            <Pane VBox.vgrow="ALWAYS" />
            
            <Button mnemonicParsing="false" onAction="#clicCerrarSesion" prefHeight="25.0" prefWidth="211.0" style="-fx-background-color: transparent; -fx-text-fill: red; -fx-cursor: hand;" text="Cerrar Sesión">
               <font>
                  <Font name="System Bold" size="14.0" />
               </font>
               <VBox.margin>
                   <Insets bottom="20.0" />
               </VBox.margin>
            </Button>

         </children>
      </VBox>
   </left>

   <center>
      <StackPane fx:id="panelContenido" prefHeight="150.0" prefWidth="200.0" style="-fx-background-color: #eceff1;" BorderPane.alignment="CENTER">
         <children>
            <VBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label fx:id="lbBienvenida" text="Bienvenido(a) Administrador:  " textFill="#546e7a">
                     <font>
                        <Font name="System Bold" size="28.0" />
                     </font>
                  </Label>
                  <Label text="Seleccione una opción del menú lateral para comenzar." textFill="#78909c">
                     <font>
                        <Font size="16.0" />
                     </font>
                  </Label>
               </children>
            </VBox>
         </children>
      </StackPane>
   </center>
</BorderPane>
